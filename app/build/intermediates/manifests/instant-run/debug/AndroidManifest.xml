<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rssreader.mrlu.myrssreader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <!-- 基础模块（必须加入以下声明）START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 基础模块（必须加入以下声明）END -->
    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >

        <!-- 实时通信模块、推送（均需要加入以下声明） START -->
        <!-- 实时通信模块、推送都要使用 PushService -->
        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- 实时通信模块、推送 END -->


        <!-- 反馈组件（需要加入以下声明）START -->
        <activity android:name="com.avos.avoscloud.feedback.ThreadActivity" />
        <!-- 反馈组件 END -->

        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.LoginActivity" >
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.ListActivity" >
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.ShowDescriptionActivity" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.SettingsActivity" >
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.InputRssLinkActivity" />
        <activity android:name="com.rssreader.mrlu.myrssreader.Test.LeanCloudTest" >
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.FeedlyRssQuery" />
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.mainView" >
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.RssFeedListActivity" >
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.openScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.AboutActivity" />
        <activity android:name="com.rssreader.mrlu.myrssreader.Controller.AppearPageActivity" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.rssreader.mrlu.myrssreader.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>