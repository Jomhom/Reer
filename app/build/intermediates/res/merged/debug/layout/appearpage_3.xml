<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_light_green_a700_color_code"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:paddingTop="30dp"
        android:src="@drawable/ap3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:text="夜间模式让阅读更舒心"
        android:textColor="@color/md_white_color_code"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_appear"
        style="@style/md_button"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/rec_appearpager"
        android:text="享受阅读"
        android:textSize="16sp"
        android:textStyle="normal" />
</LinearLayout>
