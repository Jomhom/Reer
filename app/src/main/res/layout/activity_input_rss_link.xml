<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_rss_link"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rssreader.mrlu.myrssreader.Controller.InputRssLinkActivity">


    <LinearLayout
        android:background="@color/md_teal_a700_color_code"
        android:gravity="center"
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_back"
            android:src="@drawable/back_1"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <EditText
            android:padding="5dp"
            android:background="@drawable/rec"
            android:selectAllOnFocus="true"
            android:textSize="15sp"
            android:id="@+id/et_rssLink"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/et_rsslink_hint" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_rss_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search_" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/md_green_400_color_code"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <GridLayout
            android:id="@+id/gv_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:columnCount="3"
            android:rowCount="4"
            android:layout_marginLeft="5dp"

            android:useDefaultMargins="true"

            android:stretchMode="columnWidth">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/ithome"
                style="@style/recommend_style"/>
            <LinearLayout
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                style="@style/recommend_style">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/zhihu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <ImageView
                    android:src="@drawable/ifar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/huxiu_f"
                style="@style/recommend_style"/>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/jianshu"
                style="@style/recommend_style"/>

            <ImageView
                android:scaleType="fitXY"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/wephone"
                style="@style/recommend_style"/>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/doubanmovie"
                style="@style/recommend_style"/>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/kef"
                style="@style/recommend_style"/>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/zuoandushu"
                style="@style/recommend_style"/>

            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/dajia"
                style="@style/recommend_style"/>



            <ImageView
                android:scaleType="centerCrop"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/songshu"
                style="@style/recommend_style"/>



        </GridLayout>

        <!--<TextView-->
            <!--android:padding="5dp"-->
            <!--android:background="@drawable/style_tv_tag"-->
            <!--android:layout_margin="20dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:text="asssss"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->



    </LinearLayout>





</LinearLayout>
